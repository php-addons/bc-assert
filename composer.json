{
    "name": "php-addons/bc-assert",
    "type": "library",
    "description": "A wrapper around webmozart/assert that implements assertions with bcmath functions.",
    "keywords": ["assert", "bcmath", "webmozart"],
    "homepage": "https://github.com/php-addons/bc-assert",
    "license": "MIT",
    "authors": [
        {
            "name": "Vyacheslav Startsev",
            "email": "vyacheslav.startsev@gmail.com"
        }
    ],
    "require": {
        "ext-bcmath": "*",
        "php": "^7.3 || ^8.0",
        "webmozart/assert": "^1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "PhpAddons\\BcAssert\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpAddons\\BcAssert\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
